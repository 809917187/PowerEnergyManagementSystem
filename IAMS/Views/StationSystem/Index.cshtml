<style>
    .energy-box {
        background: #f8fafc;
        border-radius: 8px;
        padding: 20px;
    }

    .icon-box img {
        width: 70px;
    }

    .dashed-line {
        position: absolute;
        top: 50%;
        left: 0;
        right: 0;
        transform: translateY(-50%);
        border-bottom: 2px dashed #8bb3ff;
    }

    .vertical-line {
        border-left: 2px dashed #8bb3ff;
        height: 100%;
        margin: 0 auto;
    }

    .label-text {
        font-size: 14px;
        color: #6c757d;
    }

    .power-value {
        font-size: 14px;
        font-weight: bold;
        color: #00306e;
    }

    .col-4 {
        display: flex;
        flex-direction: column;
        align-items: center; /* 水平居中 */
        justify-content: center; /* 垂直居中 */
        height: 150px; /* 根据需要调整 */
        position: relative;
    }

    .center-col {
        position: relative;
        height: 150px;
    }

    .vertical-line {
        border-left: 2px dashed #8bb3ff;
        flex: 1;
    }
</style>

