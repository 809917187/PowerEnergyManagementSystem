                                        </div>

                                        <div class="row text-center mt-4">

                                            <!-- 左侧：电网 -->
                                            <div class="col-4">
                                                <div class="label-text">Power grid</div>
                                                <div class="icon-box mb-2">
                                                    <i class="fa-solid fa-tower-broadcast fa-2x text-primary"></i>
                                                </div>
                                                <div>PowerGrid：<span class="power-value">@Model.PowerGrid kW</span></div>
                                            </div>

                                            <!-- 中间节点 -->
                                            <div class="col-4 center-col">
                                                <div class="dashed-line"></div>
                                                <div class="vertical-line"></div>
                                            </div>


                                            <!-- 右侧：负载 -->
                                            <div class="col-4">
                                                <div class="label-text">Load</div>
                                                <div class="icon-box mb-2">
                                                    <i class="fa-solid fa-building fa-2x text-primary"></i>
                                                </div>
                                                <div class="power-value">@Model.Load kW</div>
                                            </div>
                                        </div>

                                        <!-- 底部：储能 -->
                                        <div class="text-center mt-4">
                                            <div class="label-text">Energy storage</div>
