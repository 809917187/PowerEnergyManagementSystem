                                <span class="text-body-secondary">@Model.SelectedPowerStation.StartTime</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between lh-base">
                                <div>
                                    <h6 class="my-0">电站地址：</h6>
                                </div>
                                <span class="text-body-secondary">@Model.SelectedPowerStation.LocationDetails</span>
                            </li>
                        </ul>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>


<div class="row pt-3">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h6>系统列表</h6>
                </div>
                <div class="card-body">
                    <table id="system_list_table" class="table"
                           data-toggle="table"
                           data-pagination="true"
                           data-search="true"
                           data-sortable="true">
                        <thead>
                            <tr>
                                <th data-field="id" data-sortable="true">序号</th>
                                <th data-field="name" data-sortable="true">系统编号</th>
                                <th data-field="status" data-sortable="true">在线状态</th>
                                <th data-field="city" data-sortable="true">今日放电量(MWh)</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.CabinetStationSystemInfos.Count; i++) {
                                var cabinetInfo = Model.CabinetStationSystemInfos[i];
                                <tr>
                                    <td>@(i+1)</td>
                                    <td>@cabinetInfo.CabinetSn</td>
                                    <td>@cabinetInfo.OnlineStatus</td>
                                    <td>@cabinetInfo.DailyDischargeAmount.ToString("F2")</td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>


@section Scripts{
<script>
    var summaryTimeRange = document.getElementById('SummaryTimeRange').value;
    var selectedPsId = $('#power_station_name').val();
    var InitEarnChart = `@Url.Action("GetEarnChartData", "PowerStationOverview")?powerStationId=${selectedPsId}`;

    var InitChargeDischargeChart = `@Url.Action("GetChargeAdnDischargeChartData", "PowerStationOverview")?powerStationId=${selectedPsId}`;


</script>
<script src="~/js/PowerStationOverview/init_earn_summary.js"></script>
<script src="~/js/PowerStationOverview/init_charge_discharge_summary.js"></script>
<script>
    $(document).ready(function () {
        $('#system_list_table').bootstrapTable();




        $('#power_station_name').change(function () {
            var val = $(this).val();
            if (val) { // 如果val不为空
                window.location.href = '@Url.Action("Index", "PowerStationOverview")?PowerstationId=' + val;
            }
        });


        flatpickr("#SummaryTimeRange", {
            dateFormat: "Y-m-d",
            mode: "range",
            onChange: function (selectedDates, dateStr, instance) {
                // 当用户选择日期范围时触发此事件
                if (selectedDates.length === 2) {
                    var startDate = selectedDates[0].toLocaleDateString();
                    var endDate = selectedDates[1].toLocaleDateString();
                    InitEarnChart = `@Url.Action("GetEarnChartData", "PowerStationOverview")?powerStationId=${selectedPsId}&startDate=${encodeURIComponent(startDate)}&endDate=${encodeURIComponent(endDate)}`;
                    InitChargeDischargeChart = `@Url.Action("GetChargeAdnDischargeChartData", "PowerStationOverview")?powerStationId=${selectedPsId}&startDate=${encodeURIComponent(startDate)}&endDate=${encodeURIComponent(endDate)}`;
                    loadEarnChart(InitEarnChart);
                    loadChargeDischargeChart(InitChargeDischargeChart);
                }
            }
        });

        loadEarnChart(InitEarnChart);
        loadChargeDischargeChart(InitChargeDischargeChart);
    });
</script>
}