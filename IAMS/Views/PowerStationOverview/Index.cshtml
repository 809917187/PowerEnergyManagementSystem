@model IAMS.ViewModels.PowerStationOverview.PowerStationOverviewViewModel

@await Html.PartialAsync("_OnlyPowerStationSelector", Model.PowerStationInfos)


<div class="row pt-2">
    <div class="col">
        <div class="card">
            <div class="card-body">
                今日充电量
                <ul class="list-unstyled mt-1 mb-1 d-flex flex-column gap-3">
                    <li><h3 class="card-title pricing-card-title d-inline">@Model.ChargeAmountToday.ToString("F2")</h3>kWh</li>
                    <li>较昨日上浮<span class="text-primary">@Model.ChargeAmountRaise.ToString("F2") kWh</span></li>
                    <li><hr class="my-2"></li>
                    <li>月充电: @Model.ChargeAmountThisMonth.ToString("F2") MWh | 累计充电: @Model.TotalChargeAmount.ToString("F2") MWh</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card">
            <div class="card-body">
                今日放电量
                <ul class="list-unstyled mt-1 mb-1 d-flex flex-column gap-3">
                    <li><h3 class="card-title pricing-card-title d-inline">@Model.DischargeAmountToday.ToString("F2")</h3>kWh</li>
                    <li>较昨日上浮<span class="text-primary">@Model.DischargeAmountRaise.ToString("F2") kWh</span></li>
                    <li><hr class="my-2"></li>
                    <li>月放电: @Model.DischargeAmountThisMonth.ToString("F2") MWh | 累计放电: @Model.TotalDischargeAmount.ToString("F2") MWh</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card">
            <div class="card-body">
                今日收益
                <ul class="list-unstyled mt-1 mb-1 d-flex flex-column gap-3">
                    <li><h3 class="card-title pricing-card-title d-inline">@Model.EarningToday.ToString("F2")</h3>元</li>
                    <li>较昨日上涨<span class="text-primary">@Model.EarningRaise.ToString("F2") 元</span></li>
                    <li><hr class="my-2"></li>
                    <li>本月收益: @Model.EarningThisMonth.ToString("F2") 万元 | 总收益: @Model.TotalEarning.ToString("F2") 万元</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card">
            <div class="card-body">
                <div class="row justify-content-between">
                    <span class="col-8">
                        发生中告警: 0 条
                    </span>
                    <a class="col-4" asp-controller="XXX" asp-action="Index">查看详情</a>

                </div>

                <ul class="list-unstyled mt-1 mb-1 d-flex flex-column gap-3">
                    <li><h3 class="card-title pricing-card-title d-inline">588.68</h3>元</li>
                    <li>较昨日下降<span class="text-primary">1036.95元</span></li>
                    <li><hr class="my-2"></li>
                    <li>本月收益: 2.89 万元 | 总收益: 49.46 万元</li>
                </ul>
            </div>
        </div>
    </div>

</div>



